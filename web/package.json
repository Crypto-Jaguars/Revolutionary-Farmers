    "lucide-react": "^0.447.0",
    "next": "14.2.14",
    "next-intl": "^3.25.1",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.53.0",
    "react-icons": "^5.3.0",
    "react-loader-spinner": "^6.1.6",
